{
  "name": "chubb-test-automation-framework",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "TypeScript test automation framework skeleton",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "powershell -NoProfile -Command \"if (Test-Path dist) { Remove-Item -Recurse -Force dist }\"",
    "check": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "validate": "npm run check && npm run lint",
    "test": "npx playwright test",
    "test:local": "cross-env NODE_ENV=local npm run test",
    "test:dev": "cross-env NODE_ENV=dev npm run test",
    "test:qa": "cross-env NODE_ENV=qa npm run test",
    "test:api:qa": "cross-env NODE_ENV=qa npx playwright test ./src/api",
    "test:qa:api:regression": "cross-env NODE_ENV=qa npx playwright test ./src/api --grep @regression",
    "test:showcase": "cross-env NODE_ENV=qa npx playwright test ./src/showcase",
    "pw:list": "cross-env NODE_ENV=qa npx playwright test --list",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.54.2",
    "@types/jsonpath": "^0.2.4",
    "@types/lodash": "^4.17.24",
    "@types/node": "^22.19.11",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^3.4.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.6.1",
    "eslint": "^10.0.1",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsc-files": "^1.1.4",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "tsc-files --noEmit"
    ]
  },
  "dependencies": {
    "@types/fs-extra": "^11.0.4",
    "ajv": "^8.18.0",
    "deepmerge": "^4.3.1",
    "fs-extra": "^11.3.3",
    "jsonpath": "^1.2.1",
    "lodash": "^4.17.23",
    "zod": "^4.3.6"
  }
}
